{
  "extends": ["@epic-web/config/typescript"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    // More lenient for test files - they use runtime assertions
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": false
  }
}
